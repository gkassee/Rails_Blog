
	<h2>Recent Posts:</h2>

	<%= form_for @post do |f| %>
		<%= f.hidden_field :user_id, :value => current_user.id%>
		<%= f.label :title %>
		<br>
		<%= f.text_field :title %>
		<br>
		<%= f.label :body %>
		<br>
		<%= f.text_area :body %>
		<br>
		<%= f.submit %>
	<% end %>


	<% @posts.last(7).reverse_each do |post| %>
<div id="home-content">
	<div class="text">
		<h3><%= post.title %></h3>
		<p><%= post.user_id %></p>
	</div>
</div>

	<% end %>
