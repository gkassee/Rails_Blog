<% if current_user %>

	<div id="poster">
		<h3>Hey, <%= current_user.name %>! What's on your mind?</h3>

		<%= form_for @post do |f| %>
			<%= f.hidden_field :user_id, :value => current_user.id%>
			<%= f.label :title %>
			<br>
			<%= f.text_field :title %>
			<br>
			<%= f.label :body %>
			<br>
			<%= f.text_area :body %>
			<br>
			<%= f.submit %>
		<% end %>
	</div>
<% end %>

<div id="home-content">
	<% @posts.last(7).reverse_each do |post| %>

	<div class="text">
		<h3><%= link_to post.title, post_path(post.id) %></h3>
		<p>By: <%= link_to post.user.name, user_path(post.user_id) %> Time: <%= post.created_at %></p>
	</div>

	<% end %>
</div>
