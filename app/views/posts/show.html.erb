<h2><%= @post.title %></h2>
<p><%= @post.body %></p>

<%= form_for @comment do |f| %>
	<%= f.hidden_field :post_id, :value => @post.id %>
	<%= f.hidden_field :user_id, :value => current_user.id %>

	<%= f.label :body %>
	<br>
	<%= f.text_area :body %>
	<br>
	<%= f.submit %>
<% end %>

<%= button_to "Edit", edit_post_path, method: :get %>

<% @comments.reverse_each do |c| %>
	<p>
	Comment: <%= c.body %>
	<br>
	By: <%= c.user.name %>
	</p>
	<br>

<% end %>